{
  "manifest_version": 2,
  "name": "Email Assistant",
  "version": "1.0",
  "description": "Generate email summaries and responses with AI assistance",

  "permissions": [
    "http://localhost:8080/*",
    "https://*.yourdomain.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Email Assistant"
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src http://localhost:8080 https://*.yourdomain.com;"
}