{
  "manifest_version": 2,
  "name": "ReplyWise",
  "version": "1.0",
  "description": "Generate email summaries and responses with AI assistance",

  "permissions": [
    "http://localhost:8080/*",
    "https://replywise-8zw4.onrender.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ReplyWise"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src http://localhost:8080 https://replywise-8zw4.onrender.com;"
}